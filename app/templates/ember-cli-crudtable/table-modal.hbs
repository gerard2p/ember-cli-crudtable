<div class="modal inmodal fade" id="CrudTableDeleteRecordModal" tabindex="-1" role="dialog" aria-hidden="false">
    <div class="modal-dialog {{if this.isDeleting 'modal-sm'}}">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">
                    {{#if this.newRecord}}
                        Add a New Record
                    {{else}}
                        {{#if this.isDeleting}}
                            You're about to delete a record
                        {{else}}
                            {{#if this.showMap}}
                                Location
                            {{else}}
                                Updating
                            {{/if}}
                        {{/if}}
                    {{/if}}
                </h4>
            </div>
            <div class="modal-body">
                {{#if this.newRecord}}
                    {{partial 'ember-cli-crudtable/table-update'}}
                {{else}}
                    {{#if this.isDeleting}}
                        Deleting the record: <b>{{this.currentRecord.0.Value}}</b> is a permanent action.
                    {{else}}
                        {{#if this.showMap}}
                            {{partial 'ember-cli-crudtable/modal-googlemap'}}
                        {{else}}
                            {{partial 'ember-cli-crudtable/table-update'}}
                        {{/if}}
                    {{/if}}
                {{/if}}
            </div>
            <div class="modal-footer">
                {{#unless this.isLoading}}
                <button data-action="cancel" type="button" class="btn btn-white" data-dismiss="modal">Cancel</button>
                <button data-action="confirm" type="button" class="btn {{if this.isDeleting 'btn-danger' 'btn-primary'}}" {{action 'confirm'}}>
                    {{#if this.isDeleting}}
                        Delete
                    {{else}}
                        {{#if this.showMap}}
                            Caputure Location
                        {{else}}
                            Save
                        {{/if}}
                    {{/if}}
                </button>
                {{else}}
					{{partial 'ember-cli-crudtable/spinner'}}
                {{/unless}}
            </div>
        </div>
    </div>
</div>